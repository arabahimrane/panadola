<div class="row justify-content-center align-items-center w-75">
    <h1>Confirm Password</h1>
    <p class="text-muted">Please confirm your password</p>
    <form method="POST" action="/confirm-password">
        <div class="mb-3">
            <label for="password" class="form-label">Password</label>
            <input type="password" class="form-control" id="password" placeholder="Your password" required>
        </div>
        <div class="mb-3">
            <label for="confirmPassword" class="form-label">Confirm Password</label>
            <input type="password" class="form-control" id="confirmPassword" placeholder="Confirm password" required>
        </div>
        <p>Remember your password? <a href="/signin" class="text-primary"
                style="text-decoration: none;color: inherit;"><strong>Sign in</strong></a></p>
        <div class="d-flex justify-content-end mb-4">
            <button type="submit" class="btn btn-outline-primary">Submit</button>
        </div>
    </form>
</div>