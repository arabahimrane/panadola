<div class="row justify-content-center align-items-center w-100">
    <h1>Signin</h1>
    <p class="text-muted">Welcome back</p>

    <% if (errorMessage) { %>
    <div class="alert alert-danger">
        <%= errorMessage %>
    </div>
    <% } %>

    <form method="POST" action="signin">
        <!-- Vos champs de formulaire ici -->
        <div class="mb-3">
            <label for="email" class="form-label">Email</label>
            <input type="email" name="email" class="form-control" id="email" placeholder="Your email address" required>
        </div>
        <div class="mb-3">
            <label for="password" class="form-label">Password</label>
            <input type="password" name="password" class="form-control" id="password" placeholder="Your password"
                required>
        </div>
        <p>you don't have an <a href="singup" class="text-primary"
                style="text-decoration: none;color: inherit;"><strong>Account?</strong></a></p>
        <div class="mb-3 form-check">
            <input type="checkbox" class="form-check-input" id="rememberMe">
            <label class="form-check-label" for="rememberMe">Remember me</label>
        </div>
        <a href="getpassword">Forgot your password ?</a>
        <div class="d-flex justify-content-end mb-4">
            <button type="submit" class="btn btn-outline-primary">Login</button>
        </div>
    </form>
</div>