<div class="addProduct">
    <form class="principaleInfo" >

        <div class="productInfo">
            <div class="header">
                <h4>Create Categorie</h4>
            </div>
            <div class="body">
                <div class="input_container">
                    <% if (errorMessage) { %>
                    <div class="alert alert-danger">
                        <%= errorMessage %>
                    </div>
                    <% } %>
                    <label for="categorieName">Categorie Name</label>
                    <input class='productTitle' name="categorieName" type="text" placeholder="Categorie Name" required>
                </div>

                <div class="input_container">
                    <h5>Slug</h5>
                    <div class="slug">
                        <label for="slug"><%= data.host %>categorie/</label>
                        <input id="slugInput" class='productTitle ' name="slug" type="text" placeholder="Slug" required>
                    </div>
                </div>
                <div class="productInfo">
                    <div class="header">
                        <h4>Categorie Photos</h4>
                    </div>
                    <div class="body">
                        <div id="myDropzone" class="dropzone">
                            <div class="dz-message">
                                <span class="material-symbols-outlined">
                                    cloud_upload
                                </span>
                                <h5>Drop files here or click to upload.</h5>
                                <h6> (one picture 521x521)</h6>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </form>
        <div class="submit">
            <button id="submit">Submit</button>
        </div>

</div>