<div class="addProduct">
    <form class="principaleInfo" method="post" action="/dashboard/createCategorie">

        <div class="productInfo">
            <div class="header">
                <h4>Create Categorie</h4>
            </div>
            <div class="body">
                <div class="input_container">
                    <% if (errorMessage) { %>
                    <div class="alert alert-danger">
                        <%= errorMessage %>
                    </div>
                    <% } %>
                    <label for="categorieName">Categorie Name</label>
                    <input class='productTitle' name="categorieName" type="text" placeholder="Categorie Name" required>
                </div>

                <div class="input_container">

                    <h5>Slug</h5>
                    <div class="slug">
                        <label for="slug"><%= data.host %>categorie/</label>
                        <input id="slugInput" class='productTitle ' name="slug" type="text" placeholder="Slug" required>
                    </div>
                </div>

            </div>
        </div>
        <div class="submit">
            <button class="btn btn-outline-primary  mt-3 col-4" id="submit">Submit</button>
        </div>
    </form>

</div>